<h1>Edit user</h1>
<div class="row">
    <div class="col-md-6">
        <%= form_for (@user) do |f| %>
        <%= render 'shared/error_messages' %>
            <%= f.label :name %>
            <%= f.text_field :name %>
            <%= f.label :email %>
            <%= f.text_field :email %>
            <%= f.label :password %>
            <%= f.password_field :password %>
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation %>
            <%= f.submit "Edit Acc", class: 'btn btn-primary' %>
        <% end %>
        <div class="gravatar_edit">
            
            <%= gravatar_for @user %>
            <a href="https://gravatar_com/emails">change</a>
        </div>
    </div>    
 </div>